    <script src="/scripts/utils-script.js" defer></script>
    <script src="/scripts/errors-view-script.js" defer></script>
    <script src="/scripts/config-script.js" defer></script>
    <script src="/scripts/auth-script.js" defer></script>
    <script src="/scripts/friends-script.js" defer></script>
    <script src="/scripts/chat-script.js" defer></script>
    <script src="/scripts/init-script.js" defer></script>
    <script src="/scripts/main-script.js" defer></script>
  </head>
  <body>
    <header id="main-header">
      <h1>Chat Live With Your Friends!</h1>
      <p>Built with Node.js, Socket.IO and MongoDB</p>
    </header>
    <main>
      <%- include("includes/modal-section") %>
      <%- include("includes/init-info-section") %>
      <%- include("includes/sign-up-in-section") %>
      <%- include("includes/friends-section") %>
