<!DOCTYPE html>
<html>
  <head>
    <%- include("includes/head", {pageTitle: "Live Chat"}) %>
    <meta name="csrf-token" content="<%= locals.csrfToken %>">
    <% if (locals.invitationInfo) { %> 
      <meta name="invitation-info"
      data-invitation-id="<%= locals.invitationInfo.invitationId %>"
      data-inviter-name="<%= locals.invitationInfo.inviterName %>">
    <% } %> 
    <link rel="stylesheet" href="/styles/init-info.css" />
    <link rel="stylesheet" href="/styles/modal.css" />
    <link rel="stylesheet" href="/styles/auth.css" />
    <link rel="stylesheet" href="/styles/friends.css" />
    <link rel="stylesheet" href="/styles/chat.css" />
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/scripts/socket.io/socket.io-connection-script.js" defer></script>
    <script src="/scripts/socket.io/socket.io-send-script.js" defer></script>
    <script src="/scripts/socket.io/socket.io-receive-ack-script.js" defer></script>
